<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <FrameLayout
        android:id="@+id/fl_topnews"
        android:layout_width="match_parent"
        android:layout_height="180dp">

        <com.example.rhymedys.intelligencebj.view.NoDispatchViewPager
            android:id="@+id/vp_topnews"
            android:layout_width="match_parent"
            android:layout_height="match_parent"></com.example.rhymedys.intelligencebj.view.NoDispatchViewPager>

        <LinearLayout
            android:id="@+id/rl_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:background="#a000"
            android:orientation="vertical"
            android:padding="8dp">

            <com.viewpagerindicator.CirclePageIndicator
                android:id="@+id/indicator_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:centered="true"
                android:layout_gravity="center_horizontal"/>

            <TextView
                android:id="@+id/tv_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:maxLines="1"
                android:text="hello world"
                android:textColor="@android:color/white"
                android:textSize="18sp" />
        </LinearLayout>
    </FrameLayout>
</LinearLayout>
